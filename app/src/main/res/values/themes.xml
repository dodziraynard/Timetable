<resources
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Timetable" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/dark_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_800</item>
        <item name="colorSecondaryVariant">@color/orange_600</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/dark_700</item>
        <item name="colorBackgroundFloating">@color/black_variant</item>
    </style>

    <style name="Theme.Timetable.ActionBar" parent="Theme.Timetable">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="Theme.ActionBar" parent="Theme.Timetable">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AppBar" parent="Theme.Timetable">
        <item name="subtitleTextColor">@color/dark_700</item>
        <item name="titleTextColor">@color/dark_700</item>
        <item name="android:textColorSecondary">@color/dark_700</item>
    </style>

    <style name="Theme.TabLayout" parent="Theme.Timetable">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabBackground">?attr/colorPrimary</item>
        <item name="tabIndicatorColor">?attr/colorSecondary</item>
        <item name="tabTextColor">@color/dark_700</item>
        <item name="tabRippleColor">#00FDF273</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/orange_800</item>
    </style>
</resources>